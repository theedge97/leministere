<!-- debut de head-->
<%- include('head'); -%>


<title>Kolima Admin Transfert</title>
<link href="/assets/semantic/lib/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
  <!-- fin de head-->
  <style>
    #agencealert
    {
      position: fixed;
      top: 45%;
      left: 35%;
      z-index: 1000;
      display: none;
    }
  </style>
</head>
<!-- debut  de menue-->
<%- include('menue'); -%>
    <!--fin de menue end-->
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!-- debut du body-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                  <h4><i class="fa fa-angle-right"></i><font _mstmutation="1">Liste des Agences</font></h4><hr>
                  
                  <div class="table-responsive">
                  <table  id="dataTable"  class="table table-striped table-advance table-hover">
                    
                    
                    <thead>
                      <tr>
                        <th><i class="fa fa-bullhorn"></i><font _mstmutation="1"> N *</font></th>
                        <th><i class="fa fa-bullhorn"></i><font _mstmutation="1"> Nom de l'Agence</font></th>
                        <th class="hidden-phone"><i class="fa fa-number"></i><font _mstmutation="1">Numero de l'agence</font></th>
                        <th><i class="fa fa-bookmark"></i><font _mstmutation="1"> Contact</font></th>
                        <th><i class="fa fa-bookmark"></i><font _mstmutation="1"> Pays</font></th>
                        <th><i class="fa fa-bookmark"></i><font _mstmutation="1"> Ville</font></th>
                        <th><i class=" fa fa-edit"></i><font _mstmutation="1"> Status</font></th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                        
                            <% if(typeof lesagences !== "undefined"){ %>
                                
                                    <% for(var i= 0 ; i < lesagences.length; i++)  {%> 
                                        <tr>
                                          <td><%= i+1 %></td>
                                        <td><%= lesagences[i].nomagence %></td>
                                    <td><%= lesagences[i].numeroAgence %></td>
                                    <td><%= lesagences[i].telephoneagence %></td>
                                    <td><%= lesagences[i].pays %></td>
                                    <td><%= lesagences[i].ville %></td>
                                    <td><% if(lesagences[i].statue == 0) { %>
                                        <span class="label label-danger label-mini">Non activé</span></td>
                                        <% } if(lesagences[i].statue == 1) { %>
                                            <span class="label label-success label-mini">Activé</span></td>
                                       
                                            <% } %>
                                        <td>
                                      <button  class="btn btn-info btn-xs"><a href="/Superadmin/AgenceDetails/<%= lesagences[i].idagence %>"><i class="fa fa-eye"></i></a></button>
                                      <button data-toggle="modal" data-target="#suppression<%= lesagences[i].idagence %>" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                    </td>
                                </tr> 
                                    <!--Boite suppression-->
         <div class="modal fade" id="suppression<%= lesagences[i].idagence %>" tabindex="-1" role="dialog" aria-labelledby="defaultModal" aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title">Suppression d'une Agence l'Agence </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                      Voulez-vous supprimer  l' Agence <%= lesagences[i].nomagence %>...?
                  </div>
                  <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
                      <a href="/Superadmin/AgenceSupprimer/<%= lesagences[i].idagence %>"><button type="button" class="btn btn-danger">Oui</button></a>
                  </div>
              </div>
          </div>
      </div>
      <!--Boite suppression fin-->
                                    <% } %>
                                    
                                <% } %>
                        
     
                    </tbody>
                  </table>
                  </div>
                </div>
                <!-- /content-panel -->
              </div>
            <!-- /col-lg-12 -->
          </div>
        <!-- /row -->
      </section>
    </section>
    <!--main content end-->
    
  </section>
  <!-- js placed at the end of the document so the pages load faster -->
  <script src="/assets/semantic/lib/jquery-1.9.1.js"></script>
  
  <script src="/assets/semantic/lib/datatables/jquery.dataTables.min.js"></script>
  <script src="/assets/semantic/lib/datatables/dataTables.bootstrap4.min.js"></script>
  <script src="/assets/semantic/lib/datatables/datatables-demo.js"></script>
  

  <script src="/assets/semantic/lib/jquery.validate.js"></script>
   <script src="/assets/semantic/lib/bootstrap/js/bootstrap.min.js"></script>
   <script class="include" type="text/javascript" src="/assets/semantic/lib/jquery.dcjqaccordion.2.7.js"></script>
   <script src="/assets/semantic/lib/jquery.scrollTo.min.js"></script>
   <script src="/assets/semantic/lib/jquery.nicescroll.js" type="text/javascript"></script>
   <script src="/assets/semantic/lib/jquery.sparkline.js"></script>
   <!--common script for all pages-->
   <script src="/assets/semantic/lib/common-scripts.js"></script>
   <script type="text/javascript" src="/assets/semantic/lib/gritter/js/jquery.gritter.js"></script>
   <script type="text/javascript" src="/assets/semantic/lib/gritter-conf.js"></script>
   <!--script for this page-->
   <script src="/assets/semantic/lib/sparkline-chart.js"></script>
   <script src="/assets/semantic/lib/zabuto_calendar.js"></script>
   
  
  
</body>

</html>

                                    <% if(typeof lesactifs !== "undefined"  && typeof lespassifs !== "undefined" ){ totoactifs = 0; totopassifs = 0; %>
                                
                                    <table  id="tableau" class="table table-striped table-bordered dataTable" id="tableau">
                                        <thead>
                                            <tr>
                                                <th class="text-left  text-center" >Numéro de Compte </th>
                                                <th class="text-left  text-center" >Intitulé de Compte</th>
                                                <th class="text-left text-center" >Total</th>
                                            </tr>
                                          
                                        </thead>
                                        
                                        <tbody class="text-left text-center">
                                            <tr id="charge">
                                                <td style="text-align: left;" colspan="4">ACTIFS</td>
                                            </tr>
                                            <% if(typeof lesactifs !== "undefined"){  %>
                                                
              <% for(var j= 0 ; j < lesactifs.length; j++)  { totoactifs += lesactifs[j].toto; %> 
                                            <tr>
                                                 <td><%= lesactifs[j].numcpte %></td>
                                                 <td><%= lesactifs[j].intutile %></td>
                                                 <td><%    toacti = new Intl.NumberFormat('gn-GN').format(lesactifs[j].toto);  %> <%= toacti %></td>
                                             </tr>
                                             <% }  %>
                                             <tr>
                                                <td style="text-align: right;" colspan="4">Total: <span><%    totoac = new Intl.NumberFormat('gn-GN').format(totoactifs);  %><%= totoac %></span></td>
                                            </tr>
                                            <% }  %>
                                            <tr id="produit">
                                                <td style="text-align: left;"  colspan="4">PASSIFS</td>
                                            </tr>
                                            <% if(typeof lespassifs !== "undefined"){  %>
                                                
                                                <% for(var i= 0 ; i < lespassifs.length; i++)  { totopassifs += lespassifs[i].toto; %> 
                                                                              <tr>
                                                                                   <td><%= lespassifs[i].numcpte %></td>
                                                                                   <td><%= lespassifs[i].intutile %></td>
                                                                                   <td><%    topa = new Intl.NumberFormat('gn-GN').format(lespassifs[i].toto);  %> <%=   topa  %></td>
                                                                               </tr>
                                                                               <% }  %>
                                            <tr>
                                                <td style="text-align: right;" colspan="4">Total: <span> <%    topass = new Intl.NumberFormat('gn-GN').format(totopassifs);  %><%= topass %></span></td>
                                            </tr>
                                            
                                            <% }  %>

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td style="text-align: right;" colspan="4">Resultat: <span><%    to = new Intl.NumberFormat('gn-GN').format(totoactifs - totopassifs);  %> <%= to %></span></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                    <% }  %>
